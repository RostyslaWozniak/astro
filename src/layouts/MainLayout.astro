---
import MainHead from "@layouts/MainHead.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";

const { title, description, className } = Astro.props;
---

<html lang="pl">
  <MainHead {title} {description} />
  <body class="flex min-h-screen flex-col bg-[gray] text-white">
    <Header />
    <main
      class:list={["flex grow flex-col items-center justify-center", className]}
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
