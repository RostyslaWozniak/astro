---
// lib import
import { Image } from "astro:assets";
// components
import { Navigation } from "@components/Navigation";
import ContentLayout from "@layouts/ContentLayout.astro";
// assets
import logo from "@assets/images/logo/logo.svg";
---

<header class="fixed z-40 h-16 w-full backdrop-blur-sm backdrop-brightness-50">
  <ContentLayout
    className="flex h-full items-center justify-between py-0 lg:py-1"
  >
    <a href="/" aria-label="Go home">
      <Image src={logo} alt="firmowe logo" class="w-16 md:w-20" />
    </a>
    <Navigation client:load />
  </ContentLayout>
</header>
